<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#feebef"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".officeSettingActivity">


    <ImageView
        android:id="@+id/ivBackBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@drawable/baseline_arrow_back_24"
        />

    <TextView
        android:id="@+id/tvEam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="154dp"
        android:text="Office Location"
        android:layout_marginBottom="94dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvEam"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:padding="12dp"
        android:textSize="12dp"
        android:background="@drawable/edt_background_border"
        android:inputType="text"
        android:hint="Latitude" />

    <EditText
        android:id="@+id/etLongitude"
        android:layout_width="match_parent"
        android:layout_below="@id/etLatitude"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:padding="12dp"
        android:textSize="12dp"
        android:background="@drawable/edt_background_border"
        android:inputType="text"
        android:hint="Longitude" />

    <TextView
        android:id="@+id/tvModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/etLongitude"
        android:background="@drawable/orange_btn_bg"
        android:layout_marginTop="38dp"
        android:textStyle="bold"
        android:padding="6dp"
        android:gravity="center"
        android:text="Modify"
        android:textSize="15dp"
        android:textColor="@color/white"/>

</RelativeLayout>